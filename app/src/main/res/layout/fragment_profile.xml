<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/profile_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_profile"
    tools:context=".ui.profile.ProfileFragment">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image_profile"
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
        app:srcCompat="@drawable/image_upload"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_edit_profile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/edit_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/image_profile"
        app:layout_constraintTop_toTopOf="@id/image_profile" />

    <View
        android:id="@+id/view_profile_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/curve_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/text_profile_name"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_profile_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Mario Chukiya"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/image_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_profile_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Mario Chukiya"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/text_profile_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_profile_phone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Mario Chukiya"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/text_profile_email"
        app:layout_constraintStart_toStartOf="@id/image_profile"
        app:layout_constraintEnd_toEndOf="@id/image_profile" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_profile_medium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Mario Chukiya"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/text_profile_phone"
        app:layout_constraintStart_toStartOf="@id/image_profile"
        app:layout_constraintEnd_toEndOf="@id/image_profile" />

</androidx.constraintlayout.widget.ConstraintLayout>

