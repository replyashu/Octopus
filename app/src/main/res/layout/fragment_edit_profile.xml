<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_profile"
    tools:context=".ui.profile.ProfileFragment">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image_profile"
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
        app:srcCompat="@drawable/image_upload"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/view_profile_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/curve_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/text_profile_name"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/text_profile_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/entry_border"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="30dp"
        android:hint="Enter User Name here"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/image_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/text_profile_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/entry_border"
        android:hint="Enter User Email here"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/text_profile_name"
        app:layout_constraintStart_toStartOf="@id/text_profile_name"
        app:layout_constraintEnd_toEndOf="@id/text_profile_name" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/text_profile_phone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/entry_border"
        android:hint="enter User Phone Number here"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/text_profile_email"
        app:layout_constraintStart_toStartOf="@id/text_profile_name"
        app:layout_constraintEnd_toEndOf="@id/text_profile_name" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_save_profile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="50dp"
        android:text="Submit Changes"
        app:layout_constraintStart_toStartOf="@id/text_profile_name"
        app:layout_constraintEnd_toEndOf="@id/text_profile_name"
        app:layout_constraintTop_toBottomOf="@id/text_profile_phone" />

</androidx.constraintlayout.widget.ConstraintLayout>
