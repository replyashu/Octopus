<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image_dish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_dish_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_margin="10dp"
                android:text="sample 1"
                app:layout_constraintTop_toBottomOf="@id/image_dish"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <androidx.appcompat.widget.AppCompatRatingBar
                android:id="@+id/dish_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleX=".3"
                android:scaleY=".3"
                style="@style/Widget.AppCompat.RatingBar.Indicator"
                app:layout_constraintTop_toBottomOf="@id/text_dish_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id = "@+id/text_total_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text = "(10)"
                app:layout_constraintStart_toEndOf="@+id/dish_rating"
                app:layout_constraintTop_toTopOf="@id/dish_rating"
                app:layout_constraintBottom_toBottomOf="@id/dish_rating"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_dish_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:text="sample 1"
                app:layout_constraintTop_toBottomOf="@id/dish_rating"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <androidx.appcompat.widget.AppCompatRatingBar
                android:id="@+id/dish_rate_it"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleX=".5"
                android:scaleY=".5"
                app:layout_constraintTop_toBottomOf="@id/text_dish_description"
                app:layout_constraintStart_toStartOf="@id/text_dish_description"
                app:layout_constraintEnd_toEndOf="@id/text_dish_description" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</com.google.android.material.card.MaterialCardView>